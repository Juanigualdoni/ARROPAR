///CREACION DE USUARIO DE SOLO LECTURA MEDIANTE LA FUNCION CREATE USER Y OTORGAR LOS PERMISOS MEDIANTE GRANT///

CREATE USER 'Solovista'@'localhost' identified BY 'Coderhouse';
GRANT SELECT ON *.* TO 'Solovista'@'localhost';

///CREACION DE USUARIO DE LECTURA, MODIFICACION E INSERCION MEDIANTE LA FUNCION CREATE USER Y OTORGAR LOS PERMISOS MEDIANTE GRANT///

CREATE USER 'Todoslospermisos'@'localhost' identified BY 'Coderhouse2';
GRANT SELECT,UPDATE,INSERT ON *.* TO 'Todoslospermisos'@'localhost';
