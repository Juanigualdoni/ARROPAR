    CREATE TABLE Envios(
	ID_envios int NOT NULL,
	Fecha date NOT NULL,
	Transporte varchar(150) NOT NULL
    );
    
    INSERT Envios (ID_envios, Fecha, Transporte) VALUES (3000, CAST('2021-01-01' AS DATE), 'Camioneta');
    INSERT Envios (ID_envios, Fecha, Transporte) VALUES (3001, CAST('2021-02-01' AS DATE), 'Auto');
    INSERT Envios (ID_envios, Fecha, Transporte) VALUES (3002, CAST('2021-03-01' AS DATE), 'Camion');

    CREATE TABLE Usuarios(
	ID_usuarios int NOT NULL,
	Nombre varchar(50) NOT NULL,
	Mail varchar(50) NOT NULL,
	Direccion varchar(50) NOT NULL,
    Telefono int NOT NULL
    );

